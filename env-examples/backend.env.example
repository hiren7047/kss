# Backend Environment Variables
# Copy this file to backend/.env and update with your values

# Server Configuration
NODE_ENV=production
PORT=3000

# MongoDB Configuration
# Local MongoDB (no auth)
MONGODB_URI=mongodb://localhost:27017/kss_ngo

# MongoDB with Authentication
# MONGODB_URI=mongodb://username:password@localhost:27017/kss_ngo?authSource=admin

# MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kss_ngo?retryWrites=true&w=majority

# JWT Configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-very-strong-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Allow admin panel domain
CORS_ORIGIN=https://admin.kss.org
FRONTEND_BASE_URL=https://admin.kss.org

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Razorpay Payment Gateway (Optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Email Configuration (if implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@kss.org
